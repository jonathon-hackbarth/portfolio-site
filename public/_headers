  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; font-src 'self'; connect-src 'self' https://api.github.com https://avatars.githubusercontent.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  
