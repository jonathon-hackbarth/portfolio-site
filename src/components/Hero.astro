---
import { Image } from "astro:assets";
import profilePic from "../images/jonathonhackbarth.jpeg";
---

<section id="about" class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Hello! I'm Jonathon.</h1>
    <p class="hero-description">Cloud Systems Engineer & Web Developer</p>
    <div class="grid grid-cols-2 gap-2 max-w-xs sm:max-w-md mx-auto sm:mx-0">
      <a
        href="mailto:me@jonathonhackbarth.com"
        class="inline-flex items-center justify-center px-3 py-2 text-xs sm:text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 transition-colors"
      >
        <i class="fas fa-envelope mr-1 sm:mr-2"></i>
        <span class="inline">Email</span>
      </a>
      <a
        href="https://docs.google.com/document/d/1hTGTszeoDOw9UOEPU6FLgeboYaFBNX6atnvne3ZS7zA/edit?usp=sharing"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-3 py-2 text-xs sm:text-sm font-medium rounded-md text-gray-700 bg-gray-200 hover:bg-gray-300 transition-colors"
      >
        <i class="fas fa-file-alt mr-1 sm:mr-2"></i>
        <span class="inline">Resume</span>
      </a>
      <a
        href="https://github.com/jonathon-hackbarth"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-3 py-2 text-xs sm:text-sm font-medium rounded-md text-white bg-gray-800 hover:bg-gray-900 transition-colors"
        aria-label="GitHub Profile"
      >
        <i class="fab fa-github mr-1 sm:mr-2"></i>
        <span class="inline">GitHub</span>
      </a>
      <a
        href="https://linkedin.com/in/jonathon-w-hackbarth"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-3 py-2 text-xs sm:text-sm font-medium rounded-md text-white bg-[#0077b5] hover:bg-[#006396] transition-colors"
        aria-label="LinkedIn Profile"
      >
        <i class="fab fa-linkedin mr-1 sm:mr-2"></i>
        <span class="inline">LinkedIn</span>
      </a>
    </div>
  </div>
  <div class="hero-image-container">
    <Image
      src={profilePic}
      alt="Jonathon Hackbarth"
      class="hero-image"
      loading="eager"
    />
  </div>
</section>
