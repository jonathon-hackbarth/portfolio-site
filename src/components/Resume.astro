---
// Import resume data - using glob pattern for build-time resolution
import { formatDateRange } from '../utils/dateFormatter';

const resumeModule = import.meta.glob('../../public/resume.json', { eager: true });
const resumeFile = Object.values(resumeModule)[0] as any;
const resumeData = resumeFile.default || resumeFile;
const { basics, work, education, skills, projects } = resumeData;
---

<section id="resume" aria-labelledby="resume-heading" class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-12" style="scroll-margin-top: calc(var(--nav-height) + 1.5rem);">
  <h2 id="resume-heading" class="sr-only">Resume</h2>
  
  <!-- Download Button -->
  <div class="max-w-6xl mx-auto mb-6 flex justify-end">
    <a
      href="/resume.pdf"
      download="Jonathon-Hackbarth-Resume.pdf"
      class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium text-sm transition-colors"
      style="border-radius: 0.875rem;"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
      </svg>
      Download PDF
    </a>
  </div>

  <!-- Main Resume Container -->
  <div class="max-w-6xl mx-auto shadow-lg overflow-hidden resume-gradient" style="color: var(--color-text); border-radius: 1.5rem;">
    <div class="p-8 sm:p-8 space-y-8 resume-content" style="padding: clamp(1.5rem, 5%, 2rem);">

      <!-- Header -->
      {basics && (
        <div class="pb-0">
          <h1 class="text-3xl sm:text-5xl font-bold mb-2 sm:mb-1" style="color: var(--color-heading);">{basics.name}</h1>
          <p class="text-sm sm:text-lg mb-4 sm:mb-4" style="color: var(--color-text);">{basics.label}</p>
          
          <!-- Contact Info - Mobile: Icons, Desktop: Text -->
          <div class="flex flex-col sm:flex-row sm:flex-wrap gap-3 sm:gap-4 text-xs sm:text-sm mb-4 resume-contact-info">
            <!-- Desktop View: Email, Location, Website, Social Links as Text -->
            <div class="hidden sm:flex sm:flex-wrap gap-2 sm:gap-4 w-full">
              <a href={`mailto:${basics.email}`} style="color: var(--color-accent);" class="hover:underline break-all">
                {basics.email}
              </a>
              <span style="color: var(--color-text-muted);">•</span>
              <span style="color: var(--color-text-muted);">{basics.location?.countryCode || 'US'}</span>
              <span style="color: var(--color-text-muted);">•</span>
              <a href={basics.url} target="_blank" rel="noopener noreferrer" style="color: var(--color-accent);" class="hover:underline break-all">
                {basics.url?.replace('https://', '').replace('http://', '')}
              </a>
              {basics.profiles && basics.profiles.map((profile: any) => (
                <>
                  <span style="color: var(--color-text-muted);">•</span>
                  <a href={profile.url} target="_blank" rel="noopener noreferrer" style="color: var(--color-accent);" class="hover:underline">
                    {profile.network}
                  </a>
                </>
              ))}
            </div>
            
            <!-- Mobile View: Icon Buttons -->
            <div class="flex gap-3 sm:hidden">
              <!-- Email Icon -->
              <a
                href={`mailto:${basics.email}`}
                class="inline-flex items-center justify-center w-10 h-10 rounded-full transition-all duration-200 hover:scale-110"
                style="background-color: #bfdbfe; color: #1e40af;"
                aria-label="Send Email"
                title="Email"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
              </a>
              
              <!-- Website Icon -->
              <a
                href={basics.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-10 h-10 rounded-full transition-all duration-200 hover:scale-110"
                style="background-color: #86efac; color: #065f46;"
                aria-label="Visit Website"
                title="Website"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
              </a>
              
              <!-- GitHub Icon -->
              {basics.profiles?.find((p: any) => p.network === 'GitHub') && (
                <a
                  href={basics.profiles.find((p: any) => p.network === 'GitHub').url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-10 h-10 rounded-full transition-all duration-200 hover:scale-110"
                  style="background-color: #1f2937; color: #ffffff;"
                  aria-label="GitHub Profile"
                  title="GitHub"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              
              <!-- LinkedIn Icon -->
              {basics.profiles?.find((p: any) => p.network === 'LinkedIn') && (
                <a
                  href={basics.profiles.find((p: any) => p.network === 'LinkedIn').url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-10 h-10 rounded-full transition-all duration-200 hover:scale-110"
                  style="background-color: #bfdbfe; color: #003d82;"
                  aria-label="LinkedIn Profile"
                  title="LinkedIn"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>

          <!-- Summary -->
          <p class="text-xs sm:text-sm leading-relaxed" style="color: var(--color-text);">{basics.summary}</p>
        </div>
      )}

      <!-- Experience -->
      {work && work.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-1 pb-2 border-b-2" style="color: var(--color-heading); border-color: var(--color-accent);">Experience</h2>
          <div class="space-y-6 mt-6">
            {work.map((job: any) => (
              <div>
                <h3 class="text-lg font-bold mb-1" style="color: var(--color-heading);">{job.position}</h3>
                <div class="text-sm mb-2" style="color: var(--color-text-muted);">
                  {formatDateRange(job.startDate, job.endDate)}
                </div>
                <p class="text-sm font-semibold mb-1" style="color: var(--color-accent);">{job.name}</p>
                {job.summary && <p class="text-sm mb-2" style="color: var(--color-text);">{job.summary}</p>}
                {job.highlights && job.highlights.length > 0 && (
                  <ul class="list-disc list-inside space-y-1 text-sm" style="color: var(--color-text);">
                    {job.highlights.map((highlight: any) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Education -->
      {education && education.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-1 pb-2 border-b-2" style="color: var(--color-heading); border-color: var(--color-accent);">Education</h2>
          <div class="space-y-4 mt-6">
            {education.map((edu: any) => (
              <div>
                <h3 class="text-lg font-bold mb-1" style="color: var(--color-heading);">
                  {edu.studyType} in {edu.area}
                </h3>
                <div class="text-sm mb-1" style="color: var(--color-text-muted);">{edu.endDate}</div>
                <p class="text-sm font-semibold" style="color: var(--color-accent);">{edu.institution}</p>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Skills Grid -->
      {skills && skills.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-1 pb-2 border-b-2" style="color: var(--color-heading); border-color: var(--color-accent);">Skills</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
            {skills.map((skillGroup: any) => (
              <div class="border-l-4 pl-4 py-2 skill-card" style="border-color: var(--color-accent);">
                <h3 class="font-bold text-sm mb-2" style="color: var(--color-heading);">{skillGroup.name}</h3>
                <div class="flex flex-wrap gap-1">
                  {skillGroup.keywords.map((keyword: any) => (
                    <span class="text-xs" style="color: var(--color-text);">
                      {keyword}{skillGroup.keywords.indexOf(keyword) < skillGroup.keywords.length - 1 ? ',' : ''}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Projects -->
      {projects && projects.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold mb-1 pb-2 border-b-2" style="color: var(--color-heading); border-color: var(--color-accent);">Projects</h2>
          <div class="space-y-4 mt-6">
            {projects.map((project: any) => (
              <div>
                <h3 class="text-lg font-bold" style="color: var(--color-heading);">{project.name}</h3>
                {project.description && <p class="text-sm mb-2" style="color: var(--color-text);">{project.description}</p>}
                {project.highlights && project.highlights.length > 0 && (
                  <ul class="list-disc list-inside space-y-1 text-sm" style="color: var(--color-text);">
                    {project.highlights.map((highlight: any) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>
